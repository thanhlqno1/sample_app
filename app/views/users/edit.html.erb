<% provide :title, t("edit.title") %>
<% provide :button_text, t("form.edit") %>
<h1><%= t("edit.head") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("avatar.change"), Settings.email_link,
                    target:"_blank", rel:"noopener" %>
    </div>
  </div>
</div>
